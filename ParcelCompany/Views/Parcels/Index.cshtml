<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>My To-Do List!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using ParcelCompany.Models;

    <h1>Shipping List</h1>
    @if (Model.Count == 0)
    {
      <p>There are no parcels in the list.</p>
    }
    <ul>
      @foreach (Parcel parcel in Model)
      {
          <li><a href="/parcels/@parcel.Id">@parcel.Description</a> '$' @parcel.FinalCost </li>
      }
    </ul>

    <a href="/parcels/new">Add a new parcel.</a>

  </body>
</html>